                <div class="form-group">
                    @Html.LabelFor(m => m.FollowUpType, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.RadioButtonFor(m => m.FollowUpType, "0") @Html.Label("Call")
                        @Html.RadioButtonFor(m => m.FollowUpType, "1") @Html.Label("Mail")

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Comments, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Comments, new { placeholder = "Enter Your Comments", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Comments, "", new { @class = "text-danger" })
                    </div>
                </div>
