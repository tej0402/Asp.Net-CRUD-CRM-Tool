@model Customer.Models.FollowUpModel
@*@model IEnumerable<Customer.Models.FollowUpModel>*@
    <div id="formData">

       @using (Ajax.BeginForm("FollowUpMasterView", "Customer", new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "OnSuccess",
            OnFailure = "OnFailure",


        }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal col-md-6">
                
                <br />

                <div class="form-group">
                    @Html.LabelFor(m => m.FollowUpDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.HiddenFor(m => m.FollowUpId)
                        @Html.TextBoxFor(m => m.FollowUpDate, "{0:MM/dd/yyyy}", new { placeholder = "Choose FollowUp", autocomplete = "off", @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(m => m.FollowUpDate, "", new { @class = "text-danger" })
                    </div>
                </div>
