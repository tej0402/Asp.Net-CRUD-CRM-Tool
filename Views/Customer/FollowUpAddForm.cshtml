                <div class="form-group">
                    @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.RadioButtonFor(m => m.Status, "0") @Html.Label("Open")
                        @Html.RadioButtonFor(m => m.Status, "1") @Html.Label("Close")

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NextFollowUpDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.NextFollowUpDate, "{0:MM/dd/yyyy}", new { placeholder = "Choose Next FollowUp Date", autocomplete = "off", @class = "form-control datepickerr" })
                        @Html.ValidationMessageFor(m => m.NextFollowUpDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="btnSubmit" type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            
       }

    </div>
    @Scripts.Render("~/scripts/jquery.validate.unobtrusive.min.js")
