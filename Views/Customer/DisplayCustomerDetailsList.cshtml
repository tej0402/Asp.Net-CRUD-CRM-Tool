@model Customer.Models.CustomerModel
@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>List Of Customer Details</h2>
<br />

    <table id="cusdetails" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>
                    CustomerId
                </th>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Gender
                </th>
                <th>
                    DoB
                </th>
                <th>
                    Email
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Pincode
                </th>

                <th>Image</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.cusDetailsList)
            {
                <tr>
                    <td>
                        @item.CustomerId
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    @if (item.Gender == 0)
                    {
                        <td>Male</td>
                    }
                    else if (item.Gender == 1)
                    {
                        <td>Female</td>
                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.DoB)
                    </td>

                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.City
                    </td>
                    <td>
                        @item.State
                    </td>
                    <td>
                         @item.Pincode
                                           
                    </td>
                    <td>
                     @if (@item.ImageFile == null)
                     {
                        <img src="~/CustomerImages/@item.ImagePath" style="max-width:50px;max-height:125px" />
                     }
                     @if(@item.ImageFile != null)
                     { 
                         <img src="~/CustomerImages/@item.ImagePath" style="max-width:50px;max-height:125px" />
                     }
                    </td>
                    <td>

                        <input type="hidden" id="CustomerId" />
