            var DeleteCustomer = function(CustomerId) {
                $("#loaderDiv").show();
                var id = $("#hiddenCustomerId").val();
                $.ajax({

                    type: "POST",                   
                    url:  '@Url.Action("HtmlBeginDeleteCustomer", "Customer")',
